<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <size
                android:width="40dp"
                android:height="40dp" />
            <solid android:color="#0095ff" />
        </shape>
    </item>


    <item
        android:bottom="11dp"
        android:left="8dp"
        android:right="8dp"
        android:top="11dp">
        <shape android:shape="oval">
            <solid android:color="#ffee00" />
        </shape>
    </item>


    <item>
        <rotate
            android:fromDegrees="0"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="line">
                <solid android:color="#ffee00" />
                <stroke
                    android:width="1dp"
                    android:color="#ffee00" />
            </shape>
        </rotate>
    </item>

    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="line">
                <solid android:color="#ffee00" />
                <stroke
                    android:width="1dp"
                    android:color="#ffee00" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="line">
                <solid android:color="#ffee00" />
                <stroke
                    android:width="1dp"
                    android:color="#ffee00" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="135"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="line">
                <solid android:color="#ffee00" />
                <stroke
                    android:width="1dp"
                    android:color="#ffee00" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="180"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="line">
                <solid android:color="#ffee00" />
                <stroke
                    android:width="1dp"
                    android:color="#ffee00" />
            </shape>
        </rotate>
    </item>


</layer-list>